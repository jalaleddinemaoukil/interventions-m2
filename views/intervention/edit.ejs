<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editing: <%= intervention.interventionTitre %> <%= intervention.nomSociete %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= intervention.interventionTitre %> <%= intervention.nomSociete %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(intervention.updatedAt).toUTCString() %></b>
      <b>UserId:</b> <%= intervention._id %>
    </div>
  </div>

</div>


<form action="/edit/<%= intervention._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="interventionTitre">Titre Intervention</label>
      <input type="text" class="form-control" id="interventionTitre" name="interventionTitre" value="<%= intervention.interventionTitre %>" placeholder="First Name" required>
    </div>

    <div class="col">
      <label for="nomSociete">Nom Societe</label>
      <input type="text" class="form-control" id="nomSociete" name="nomSociete" value="<%= intervention.nomSociete %>" placeholder="Last Name" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="telSociete">Telephone Societe </label>
      <input type="text" class="form-control" id="telSociete" name="telSociete" value="<%= intervention.telSociete %>" placeholder="telSocieteephone" required>
    </div>

    <div class="col">
      <label for="email">Email Societe</label>
      <input type="text" class="form-control" id="email" name="email" value="<%= intervention.email %>" placeholder="Email" required>
    </div>
  </div>

  <div class="col">
    <label for="address">address Societe</label>
    <input type="text" class="form-control" id="address" name="address" value="<%= intervention.address %>" placeholder="address" required>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-6">
    <label for="ville">Ville Societe</label>
    <input type="text" class="form-control" id="ville" name="ville" value="<%= intervention.ville %>" placeholder="ville" required>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-8">
    <label for="details">intervention Details</label>
    <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="intervention Details"><%= intervention.details %></textarea>
  </div>
</div>


<div class="row justify-content-center">
  <div class="col-md-6">
    <button type="submit" class="btn btn-primary">Update intervention</button>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete intervention</button>
  </div>
</div>

</form>



