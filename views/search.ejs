<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Search Results</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="/add" class="btn btn-sm btn-outline-secondary">+ New Intervention</a>
    </div>
  </div>
</div>

<div class="table-responsive">
  <% if (interventions.length > 0) { %>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Company Name</th>
          <th scope="col">Telephone</th>
          <th scope="col">Email</th>
          <th scope="col">Address</th>
          <th scope="col">City</th>
          <th scope="col">Details</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% interventions.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.interventionTitre %></td>
            <td><%= element.nomSociete %></td>
            <td><%= element.telSociete %></td>
            <td><%= element.email %></td>
            <td><%= element.address %></td>
            <td><%= element.ville %></td>
            <td><%= element.details %></td>
            <td>
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-sm">
                  <i class="bi bi-eye"></i>
                </a>
                <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-sm">
                  <i class="bi bi-pencil"></i>
                </a>
                <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h2>No results found.</h2>
  <% } %>
</div>
